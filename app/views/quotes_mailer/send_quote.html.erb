<h1>
  Demande de devis nÂ° <%= @quote.id %>
</h1>

<table style="width: 75%; margin: auto; border-collapse: collapse; border: 1px solid #dee2e6;">

  <thead>
    <td style="border: 2px solid #b6c0c8; padding: 0.75rem; text-align: center;">
      PRODUITS
    </td>
    <td style="border: 2px solid #b6c0c8; padding: 0.75rem; text-align: center;">
      VENDU PAR
    </td>
    <td style="border: 2px solid #b6c0c8; padding: 0.75rem; text-align: center;">
      QUANTITE
    </td>
  </thead>

  <% @quote_items.group_by { |item| item.product.category }.each do |category, items| %>
    <thead>
      <tr>
        <td colspan="3" style="background-color: #d1e7dd; border: 1px solid #dee2e6; text-align: center; padding: 0.75rem;">
          <%= category.name.upcase %>
        </td>
      </tr>
    </thead>
    <tbody>
      <% items.each_with_index do |item, index| %>
        <tr style="<%= 'background-color: #f8f9fa;' if index.even? %>">

          <td style="border: 1px solid #dee2e6; padding: 0.75rem;">
            <%= item.product.name %>
          </td>

          <td style="border: 1px solid #dee2e6; padding: 0.75rem;">
            <%= item.product.box %>
          </td>

          <td style="border: 1px solid #dee2e6; padding: 0.75rem;">
            <%= item.quantity %>
          </td>

        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>
