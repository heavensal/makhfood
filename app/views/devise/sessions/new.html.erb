<h2 class="text-danger text-center my-5">ADMINISTRATION</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="container">
    <div class="row justify-content-center">

      <div class="field col-md-7 col-12">
        <%= f.label :email, "Administrateur", class: "form-label" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="field col-md-7 col-12">
        <%= f.label :password, "Mot de Passe", class: "form-label" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
      </div>

      <%# <% if devise_mapping.rememberable? %>
        <%# <div class="field"> %>
          <%# <%= f.check_box :remember_me %>
          <%# <%= f.label :remember_me %>
        <%# </div> %>
      <%# <% end %>

      <div class="actions text-center my-5">
        <%= f.submit "Connexion", class: "btn btn-primary" %>
      </div>

    </div>
  </div>
<% end %>

