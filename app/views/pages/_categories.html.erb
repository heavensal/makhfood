<h2 class="my-5 text-primary">
  Consulter nos produits par cat√©gorie
</h2>
  <section class="row text-center">
    <% categories.each do |cat| %>
      <div class="col-2 border border-2">

        <%= link_to category_path(cat), class: "text-decoration-none" do %>
          <div class="card">
            <% if cat.link %>
              <%= image_tag cat.link, class: "card-img-top h-50" %>
            <% end %>
            <div class="card-body">
              <%= cat.name %>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </section>
