<h2 class="mt-5 mb-3 text-primary">
  Consulter nos produits par catégorie
</h2>
<section class="row g-1">

  <!-- Première colonne plus grande -->
  <div class="col-md-3 col-12">
    <%= link_to products_path, class: "text-decoration-none card" do %>
        <%= image_tag 'tous_les_produits.png', class: "object-fit-cover img-card-top rounded-top-1" %>
    <div class="card-body bg-primary rounded-bottom-1">
      <p class="card-text text-center text-white">
        TOUS NOS PRODUITS
      </p>
    </div>
    <% end %>
  </div>

  <% categories.each do |cat| %>
  <div class="col-md-3 col-12">
    <%= link_to category_path(cat), class: "text-decoration-none card" do %>
      <%= cl_image_tag( cat.photo.key, :transformation=>["square"], class: 'rounded-top-1' ) %>
      <div class="card-body bg-warning rounded-bottom-1">
        <p class="card-text text-center text-white">
          <%= cat.name %>
        </p>
      </div>
    <% end %>
  </div>
  <% end %>

</section>
