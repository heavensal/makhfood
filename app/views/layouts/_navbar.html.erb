<nav class="navbar bg-secondary-subtle border-bottom sticky-top">
  <div class="container-fluid">
    <%= link_to products_path do %>
      <%= image_tag 'makhfood_no_bg.png', width:"80" %>
    <% end %>
    <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasDarkNavbar" aria-controls="offcanvasDarkNavbar" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="offcanvas offcanvas-end text-bg-secondary" tabindex="-1" id="offcanvasDarkNavbar" aria-labelledby="offcanvasDarkNavbarLabel">
      <div class="offcanvas-header">
        <h5 class="offcanvas-title" id="offcanvasDarkNavbarLabel">Makhfood Market</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
      </div>
      <div class="offcanvas-body">

        <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">

          <li class="nav-item">
            <%= link_to 'Gérer mon devis', quote_path, class: 'nav-link' %>
          </li>

          <li class="nav-item">
            <%= link_to 'Tous les Produits', products_path, class: "nav-link" %>
          </li>

          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              Catégories
            </a>

            <ul class="dropdown-menu dropdown-menu-dark">
              <li><%= link_to 'Toutes les catégories', categories_path, class: "dropdown-item" %></li>

              <li>
                <hr class="dropdown-divider">
              </li>
              <% Category.all.order(:name).each do |cat| %>
                <li><%= link_to cat.name, category_path(cat), class: "dropdown-item" %></li>
              <% end %>

            </ul>
          </li>

          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              Marques
            </a>

            <ul class="dropdown-menu dropdown-menu-dark">
              <li><%= link_to 'Toutes les marques', brands_path, class: "dropdown-item" %></li>

              <li>
                <hr class="dropdown-divider">
              </li>
              <% Brand.all.order(:name).each do |b| %>
                <li><%= link_to b.name, brand_path(b), class: "dropdown-item" %></li>
              <% end %>

            </ul>
          </li>



        </ul>

        <%= search_form_for @q, class: "d-flex mt-3" do |f| %>
          <%= f.label :name_or_category_name_cont, hidden: true %>
          <%= f.search_field :name_or_category_name_cont, class: "form-control me-2", placeholder: "Chercher un produit" %>
          <%= f.submit "Rechercher", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</nav>
