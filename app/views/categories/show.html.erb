<h1 class="my-5 text-center"><%= @category.name %></h1>


<div class="container text-center">
<h2 class="my-3">Nos Marques</h2>
  <div class="row row-cols-lg-5 row-cols-md-2 row-cols-1 gy-5 gx-1">
    <% @brands.each do |brand| %>
        <div class="col" id="brand_<%= brand.id %>"%>
          <%= link_to brand_path(brand), class: "text-decoration-none" do %>

            <div class="card bg-dark text-white h-100">


              <div class="card-body">
                <p class="card-text"><%= brand.name %></p>
              </div>

            </div>

          <% end %>
        </div>
    <% end %>
  </div>

  <div class="row row-cols-lg-4 row-cols-md-2 row-cols-1 gy-5 gx-1">
    <% @products.each do |product| %>
      <div class="col" id="product_<%= product.id %>"%>
        <%= link_to product_path(product), class: "text-decoration-none" do %>

          <div class="card bg-dark text-white h-100">

            <% if product.link %>
              <div class="square-image-container">
                <%= image_tag product.link, class: 'w-100 h-100' %>
              </div>
            <% end %>

            <div class="card-body">
              <p class="card-text"><%= product.name.capitalize %></p>
            </div>

          </div>

        <% end %>
        <%# <%= link_to 'supprimer', product_path(product), class: 'btn btn-danger', data: {turbo_method: :delete} %>
      </div>
    <% end %>
  </div>

</div>
