<h1 class="my-5 text-center text-danger">TOUS NOS RAYONS</h1>


<div class="container text-center">
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-1 g-5">

    <% @categories.each do |category| %>
        <div class="col" id="category_<%= category.id %>"%>
          <%= link_to category_path(category), class: "text-decoration-none" do %>

            <div class="card bg-warning text-white h-100">

              <div class="card-body">
                <p class="card-text"><%= category.name %></p>
              </div>

            </div>

          <% end %>
          <%# <%= link_to 'supprimer', category_path(category), class: 'btn btn-danger', data: {turbo_method: :delete} %>
        </div>
    <% end %>

  </div>
</div>
