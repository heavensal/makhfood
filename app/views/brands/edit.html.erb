<h1 class="my-5 text-center text-danger">MODIFIER UN MARQUE</h1>

<%= form_with(model: @brand, local: true, class: 'form') do |form| %>
  <div class="row w-75 mx-auto">

    <div class="form-group col-12 my-3">
      <%= form.label :name, "Nom de la marque" %>
      <%= form.text_field :name, class: 'form-control' %>
    </div>

  </div>

  <div class="form-group text-center my-3">
    <%= form.submit 'MODIFIER LA MARQUE', class: 'btn btn-success' %>
  </div>

  <div class="text-center my-3">
  <%= link_to 'SUPPRIMER CETTE MARQUE', brand_path(@brand), class:"btn btn-dark", data: {turbo_method: :delete} %>
</div>

<% end %>
