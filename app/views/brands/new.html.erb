<h1 class="my-5 text-center text-danger">CREER UN MARQUE</h1>

<%= form_with(model: @brand, local: true, class: 'form') do |form| %>
  <div class="row w-75 mx-auto">

    <div class="form-group col-12 col-md-6 my-3">
      <%= form.label :name, "Nom de la marque" %>
      <%= form.text_field :name, class: 'form-control' %>
    </div>

  </div>

  <div class="form-group text-center my-3">
    <%= form.submit 'AJOUTER LA MARQUE', class: 'btn btn-success' %>
  </div>

<% end %>
